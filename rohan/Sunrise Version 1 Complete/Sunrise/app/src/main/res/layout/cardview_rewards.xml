<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/RewardsCard"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/cardview_border"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_margin="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.7">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/RewardsName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotobold"
                        android:text="ORDER"
                        android:textColor="#000"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/Rewardsid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TRANSACTIONID-011"
                        android:fontFamily="@font/robotolight"
                        android:textColor="#000"
                        android:textSize="10dp" />
                    <TextView
                        android:id="@+id/Rewardsdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="24-JUN-2018"
                        android:fontFamily="@font/robotolight"
                        android:textColor="#000"
                        android:textSize="10dp" />
                    <TextView
                        android:id="@+id/Rewardsdetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ORDER DETAILS"
                        android:fontFamily="@font/robotolight"
                        android:textColor="#000"
                        android:textSize="10dp" />
                    <TextView
                        android:id="@+id/Rewardsorder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ORDERNO:ORD10"
                        android:fontFamily="@font/robotolight"
                        android:textColor="#000"
                        android:textSize="10dp" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.6">

                <TextView
                    android:id="@+id/Rewardsamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotobold"
                    android:gravity="center"
                    android:text="1000"
                    android:textColor="#228B22"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="0.4">

                <TextView
                    android:id="@+id/Rewardsbalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotobold"
                    android:gravity="center"
                    android:text="1000"
                    android:textColor="#000"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="0.6">


                <ImageView
                    android:id="@+id/Rewardsarrow"
                    android:layout_width="35dp"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_arrow">

                </ImageView>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>