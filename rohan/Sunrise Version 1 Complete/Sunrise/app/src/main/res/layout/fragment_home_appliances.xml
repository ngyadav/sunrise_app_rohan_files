<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeAppliances.HomeAppliancesDetails">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:scrollbars="none"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:cardBackgroundColor="@color/white"-->
        <!--app:cardCornerRadius="5dp"-->
        <!--app:cardElevation="5dp"-->
        <!--app:cardUseCompatPadding="true">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/htv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/tv" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TeleVision"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hwashing"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/washing" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Washing"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>




            <LinearLayout

                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hrefrigarator"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/refrigerator" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Refrigarator"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hdth"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/dth" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DTH"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>


            <LinearLayout

                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hiron"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/iron" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Iron Box"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>



            <LinearLayout

                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hfans"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/fans" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Fans"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>


            <LinearLayout

                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hcooler"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/coolers" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Air Coolers"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>


            <LinearLayout

                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hmixi"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/mixi" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mixer Grinder"
                    android:textColor="#000"
                    android:textSize="9sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hremote"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/remote" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Remote"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hkitchen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/kitchen" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Kitchen Items"
                    android:textColor="#000"
                    android:textSize="9sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hothers"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/others" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Others"
                    android:textColor="#000"
                    android:textSize="9sp"
                    android:textStyle="normal" />

            </LinearLayout>





        </LinearLayout>
        <!--</android.support.v7.widget.CardView>-->

    </HorizontalScrollView>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        android:id="@+id/shimmer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <include
                layout="@layout/singleitemview"></include>
            <include
                layout="@layout/singleitemview"></include>
            <include
                layout="@layout/singleitemview"></include>
            <include
                layout="@layout/singleitemview"></include>
            <include
                layout="@layout/singleitemview"></include>
            <include
                layout="@layout/singleitemview"></include>



        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerviewhomeappliances"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>